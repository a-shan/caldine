<div class="panel panel-default devise-bs">
	<div class="parent">
		<div class="panel-body edit_profile">
			<h3>Edit <%= @user.first_name %>'s Profile</h3>
		    <%= form_tag(user_path, method: "put", :multipart => true) do %>
		      <%= label_tag(:edit_profile, "Edit Profile:") %><br />
		      <!--<%= text_field_tag(:time, nil, placeholder: "Time (00:00 am/pm)", :required => true ) %>-->
		      <%= label_tag("Name") %>
		      <%= text_field_tag(:first_name, @user.first_name, placeholder: "First name", :required => true) %>
		      <%= text_field_tag(:last_name, @user.last_name, placeholder: "Last name", :required => true) %><br />
		      <%= label_tag("Email") %>
		      <%= text_field_tag(:email, @user.email, placeholder: "Email", :required => true) %><br />
		      <%= label_tag("Phone Number") %>
		      <%= text_field_tag(:phone_number, @user.phone_number, placeholder: "Phone Number", :required => false) %><br />
		      <%= label_tag("About") %><br />
		      <%= text_area_tag(:description, @user.description, placeholder: "Put a blurb about yourself!", :required => false, :class => "about_field") %><br />
			  <%= label_tag("Upload image") %>
		      <%= file_field_tag(:avatar) %>
		      <%= hidden_field_tag(:avatar_cache) %>
		      <%= submit_tag("Update", :class => "submit") %>
		    <% end %>
			<%= link_to "Delete Account", @user, :method => :delete, data: { confirm: "Are you sure you want to delete your account?" } %>
		</div>
	</div>
</div>