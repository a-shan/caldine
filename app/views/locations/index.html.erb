<div class="container">
  <div class="row">
    <h3>Locations</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @locations.each do |loc| %>
            <tr>
              <td><%= link_to loc.name, location_path(loc) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>